{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/payment-service-dto.schema.json",
  "title": "Payment Service DTO Schema",
  "description": "Schema for Payment DTO used in inter-service communication",
  "type": "object",
  "properties": {
    "paymentId": {
      "type": "string"
    },
    "orderId": {
      "type": "string"
    },
    "amount": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["paymentId", "orderId", "amount", "date"]
}

